{
  "name": "elm-dev-vscode",
  "displayName": "Elm Dev",
  "description": "An Elm extension for handling large Elm codebases",
  "version": "0.0.1",
  "publisher": "mgriffith",
  "license": "BSD-3-Clause",
  "repository": "https://github.com/mdgriffith/elm-dev.git",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "elm.restartLSP",
        "title": "Restart Elm Dev LSP Server"
      },
      {
        "command": "elm.restartMCP",
        "title": "Restart Elm Dev MCP Server"
      }
    ],
    "languages": [
      {
        "id": "elm",
        "aliases": [
          "Elm",
          "elm"
        ],
        "extensions": [
          ".elm"
        ],
        "configuration": "./elm.configuration.json"
      }
    ],
    "grammars": [
      {
        "scopeName": "markdown.elm.codeblock",
        "path": "./syntaxes/codeblock.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.elm": "elm",
          "meta.embedded.block.glsl": "glsl"
        }
      },
      {
        "language": "elm",
        "scopeName": "source.elm",
        "path": "./syntaxes/elm.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Elm configuration",
      "properties": {}
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run build",
    "package": "bun run build ; vsce package --out ./dist/elm-dev-vscode.vsix",
    "build": "bun run esbuild",
    "typecheck": "tsc --noEmit",
    "watch": "tsc -watch -p ./",
    "test": "bun run build && node ./node_modules/vscode/bin/test",
    "esbuild": "bun run esbuild-base --sourcemap",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --external:vscode-languageclient --format=cjs --platform=node",
    "esbuild-watch": "bun run esbuild-base --sourcemap --watch",
    "dev:link-to-cursor": "ln -s $PWD ~/.cursor/extensions/mgriff.elm-dev-0.0.1"
  },
  "devDependencies": {
    "@types/node": "^11.12.21",
    "@types/vscode": "^1.99.0",
    "esbuild": "^0.15.7",
    "eslint": "^7.21.0",
    "typescript": "^4.4.3",
    "vsce": "^2.9.1"
  },
  "dependencies": {
    "cross-spawn": "^6.0.5",
    "elm": "^0.19.1-5",
    "elm-codegen": "^0.2.0",
    "elm-format": "0.8.5",
    "vscode-languageclient": "^9.0.1",
    "websocket": "^1.0.31",
    "which": "^1.3.1"
  }
}