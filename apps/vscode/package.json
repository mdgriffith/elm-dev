{
  "name": "elm-dev-vscode",
  "displayName": "Elm Dev",
  "description": "An Elm extension for handling large Elm codebases",
  "version": "0.1.2",
  "publisher": "ElmDev",
  "license": "BSD-3-Clause",
  "repository": "https://github.com/mdgriffith/elm-dev.git",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "workspaceContains:elm.json"
  ],
  "contributes": {
    "commands": [
      {
        "command": "elm.restart",
        "title": "Elm Dev: Restart"
      },
      {
        "command": "elm.generateAgentDoc",
        "title": "Elm Dev: Generate Elm Agent Doc (docs/agent.elm.md)"
      }
    ],
    "languages": [
      {
        "id": "elm",
        "aliases": [
          "Elm",
          "elm"
        ],
        "extensions": [
          ".elm"
        ],
        "configuration": "./elm.configuration.json"
      }
    ],
    "grammars": [
      {
        "scopeName": "markdown.elm.codeblock",
        "path": "./syntaxes/codeblock.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.elm": "elm",
          "meta.embedded.block.glsl": "glsl"
        }
      },
      {
        "language": "elm",
        "scopeName": "source.elm",
        "path": "./syntaxes/elm.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Elm configuration",
      "properties": {
        "elmDev.path": {
          "type": "string",
          "default": "",
          "markdownDescription": "Optional absolute path to the `elm-dev` executable. If unset, the extension will look for `elm-dev` on PATH.",
          "scope": "machine-overridable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run build",
    "package": "bun run build && mkdir -p ./dist && vsce package --out ./dist/elm-dev-vscode.vsix",
    "build": "bun run esbuild",
    "typecheck": "tsc --noEmit",
    "watch": "tsc -watch -p ./",
    "test": "bun run build && node ./node_modules/vscode/bin/test",
    "esbuild": "bun run esbuild-base --sourcemap",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild-watch": "bun run esbuild-base --sourcemap --watch",
    "dev:link-to-cursor": "ln -s $PWD ~/.cursor/extensions/mgriff.elm-dev-0.0.1"
  },
  "devDependencies": {
    "@types/node": "^11.12.21",
    "@types/vscode": "^1.99.0",
    "esbuild": "^0.15.7",
    "eslint": "^7.21.0",
    "typescript": "^4.4.3",
    "vsce": "^2.9.1"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "which": "^5.0.0"
  }
}